<body style="background: radial-gradient(circle, rgba(138,212,32,1) 0%, rgba(0,149,255,1) 100%);">
<p></p>

    <div class="login-container" style="height: 850px;">

        

        <a href="/" id="logo"><img src="assets/logo.png" alt="logo"></a>
        <div class="login-input-container" style="bottom: 20%">
            <h1>Sign-in</h1>
            <form method="post" action="/doRegister">
            <input type="text" class="login-input-box" id="name" name="name" placeholder="Name">
            <input type="email" class="login-input-box" id="email" name="email" placeholder="Email">
            <input type="password" class="login-input-box" id="password" name="password" placeholder="Password">
            <input type="password" class="login-input-box" id="password2" name="password2" placeholder="Repeat Password">
            <button type="submit" class="input-button" id="input-button" >REGISTER</button>
        </form>
        <p>Already a member?</p>
        <a href="/login"><p>Login now</p></a>
        </div>

        

    </div>


